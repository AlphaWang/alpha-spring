<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    
    <bean id="greetingAdvice" class="com.alphawang.spring.core.aop.GreetingBeforeAdvice"/>
    
    <bean id="waiter" class="com.alphawang.spring.core.aop.NaiveWaiter"/>
    
    <bean id="aopWaiter" class="org.springframework.aop.framework.ProxyFactoryBean"
          p:proxyInterfaces="com.alphawang.spring.core.aop.Waiter"
          p:interceptorNames="greetingAdvice"
          p:optimize="false"
          p:target-ref="waiter"/>
</beans>